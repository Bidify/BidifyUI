html
  font-family $family-content
  font-size 16px
  word-spacing 1px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  background-color $white

*,
*::before,
*::after
  box-sizing border-box
  margin 0

h1, h2, h3, h4, h5
  font-family $family-display


// overwrite
.el-notification__content
  text-align left !important
// end overwrite

.is-text-left
  text-align left !important

.is-text-center
  text-align center !important

.is-text-right
  text-align right !important


.layout
  &.is-light
    background-color $light

  &.is-white
    background-color $white

  &.is-dark
    background-color $dark

  &.is-min-height
    min-height 100vh
    max-height -webkit-fill-available

.container
  width 100%
  margin auto

  &.is-full-screen
    width 100%
    height 100vh
    max-height -webkit-fill-available
    display flex
    justify-content center
    align-items center

  &.is-min-height
    min-height 100vh
    max-height -webkit-fill-available

  &.is-light
    background-color $light

  &.is-white
    background-color $white

  &.is-dark
    background-color $dark

  &.is-narrow
    width 400px !important

.page
  width 96%
  margin auto

  +for_breakpoint(md lg xl)
    width 100%
    max-width 1420px

.overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  display flex
  justify-content center
  align-items center
  z-index 500
  background-color $black
  backdrop-filter blur(10px)
  transition(opacity, 0.3s, linear)

  &.is-dark
    background-color $dark

  &.is-translucent
    background-color rgba(0,0,0,0.55)

.overlay-container
  width 750px
  max-width 90%
  margin auto
  color white

  &.is-narrow
    width 400px

.button-list
  margin-bottom 24px

  .el-button
    position relative
    text-decoration none
    display block
    margin-bottom $size-s
    width 100%
    color $dark
    background-color transparent !important
    font-size $size-m
    border 1px $dark solid
    padding 18px 20px
    opacity 0.65
    transition()

    .icon
      position absolute
      left $space-m
      top 52%
      transform translateY(-50%)

    .icon.el-icon-loading
      top 35%

    &:hover
      opacity 1
      border-color $dark
      color $dark

    &:active,
    &:focus
      opacity 0.65
      border-color $dark
      background-color $dark !important
      color $dark

    &.is-disabled
      opacity 0.3

      &:hover
        opacity 0.3 !important

  .el-button+.el-button
    margin-left 0


// transitions
.replace-enter,
.replace-leave-to
  opacity 0 !important
